@import 'nib'

.move-rate
  position relative
  width  8.4rem
  height 4.6rem
  > .title
  > .value
  > .plus
  > .minus
    position absolute
    text-align center
  > .title
    top -0.4rem
    font-size 0.5rem
  > .value
    left 0.3rem
    top  0.3rem
    width  3.6rem
    height 3.6rem
    border 0.2rem solid #666
    border-radius 1rem
    line-height 3.6rem
    font-size 2rem
